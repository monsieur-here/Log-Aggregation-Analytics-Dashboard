package com.log_analytics.logProcessor.service;

import java.time.LocalDateTime;

import jakarta.persistence.Entity;
import jakarta.persistence.Id;
import jakarta.persistence.Table;

@Entity 				// ---- A proper way to use this to store persistently the log data ----
@Table(name = "log_management")
public class LogEntryDetails {
	
	private long user_id;	// User that generated the log
	
	@Id
	private long log_id;	 
	
	private String severity; // Type of the log

	private String message;	// Actual log message
	private long message_number;
	
	private LocalDateTime timestamp; // Occurence of log message and other details
}
